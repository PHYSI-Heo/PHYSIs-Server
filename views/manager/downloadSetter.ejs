<!doctype html>

<html lang="en">

<head>

  <meta charset="utf-8">
  <title>MANAGER</title>

  <meta name="description" content="PHYSIs Kit Manager Page">
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link rel="icon" type="image/png" href="/img/icon/icon.png" />

  <!--Style-->

  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/manager.css">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/style-responsive.css">
  <!-- <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/font-awesome/4.3.0/css/font-awesome.min.css"> -->
  <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.1/css/all.css" integrity="sha384-50oBUHEmvpQ+1lW4y57PTFmhCaXp0ML5d60M1M7uH2+nqUivzIebhndOJK28anvf" crossorigin="anonymous">

  <!--[if lt IE 9]>
  <script src="http://html5shiv.googlecode.com/svn/trunk/html5.js"></script>
  <![endif]-->

</head>


<body>

  <% include ./header %>

  <div class="content" id="ajax-content">

    <!--Content-->
    <div class="text-intro" id="site-type">
      <h1>PHYSIs Download Setting</h1>
    </div>

    <div class="main-content">

      <div style="margin-top:50px;">
        <h1 class="text-title">PHYSIs Software Download</h1>
        <table class="width-full">
          <colgroup>
            <col style="width:30%;" />
            <col style="width:60%;" />
            <col style="width:10%;" />
          </colgroup>

          <tbody>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>PHYSIs Kit Version</span></td>
              <td><input type="text" class="width-full" id="download-kit-version"></td>
              <td></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>PHYSIs Kit Library</span></td>
              <td><input type="text" class="download-file width-full" id="download-kit-arduino-lib" readonly></td>
              <td><input type="button" value="Clear" name="0" class="textbtn">
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>PHYSIs Kit Arduino Menual</span></td>
              <td><input type="text" class="download-file width-full" id="download-kit-arduino-menual" readonly></td>
              <td><input type="button" value="Clear" name="0" class="textbtn">
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>PHYSIs APP GitHub</span></td>
              <td><input type="text" class="width-full" id="download-kit-android-git"></td>
              <td></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>PHYSIs Kit Android Menual</span></td>
              <td><input type="text" class="download-file width-full" id="download-kit-android-menual" readonly></td>
              <td><input type="button" value="Clear" name="0" class="textbtn">
            </tr>
          </tbody>
        </table>

        <div style="margin:10px 0 10px 0;">
          <input class="button-submit width-20" id="btn-kit-update" type="button" value="등록">
          <div class="clear"></div>
        </div>

      </div>

      <!-- Content List -->
      <div>
        <h1 style="margin-top:70px;" class="text-title">Content List</h1>
        <nav id="content-nav">
          <!-- <a class="content-item this" value="new" id="new-register"><span>New Content</span></a> -->
        </nav>
      </div>

      <!-- Selected Content Info -->
      <div style="margin-top:50px;">
        <h1 class="text-title">Content Download Flies.</h1>
        <table class="width-full" id="download-table">
          <colgroup>
            <col style="width:30%;" />
            <col style="width:60%;" />
            <col style="width:10%;" />
          </colgroup>

          <tbody id="download-infos">
            <tr>
              <td class="table-header" style="text-align:center;"><span>Outline</span></td>
              <td>
                <textarea id="download-outline" style="height:100px;" type="text" cols="108" rows="15"></textarea>
              </td>
            </tr>
            <tr>
              <td class="table-header" style="text-align:center;"><span>Description</span></td>
              <td>
                <textarea id="download-description" style="height:100px;" type="text" cols="108" rows="15"></textarea>
              </td>
            </tr>
            <tr>
              <td class="table-header" style="text-align:center;"><span>Communication</span></td>
              <td>
                <textarea id="download-communication" style="height:100px;" type="text" cols="108" rows="15"></textarea>
              </td>
            </tr>
            <tr>
              <td class="table-header" style="text-align:center;"><span>Composition</span></td>
              <td>
                <textarea id="download-composition" style="height:100px;" type="text" cols="108" rows="15"></textarea>
              </td>
            </tr>


            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Package</span></td>
              <td><input type="text" class="download-file width-full" id="download-package" readonly></td>
              <td><input type="button" value="Clear" name="0" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Menual</span></td>
              <td><input type="text" class="download-file width-full" id="download-menual" readonly></td>
              <td><input type="button" value="Clear" name="1" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Arduino (Example)</span></td>
              <td name="test"><input type="text" class="download-file width-full" id="download-ex-arduino" readonly></td>
              <td><input type="button" value="Clear" name="2" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Arduino</span></td>
              <td><input type="text" class="download-file width-full" id="download-arduino-code" readonly></td>
              <td><input type="button" value="Clear" name="3" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Arduino reference Lib</span></td>
              <td><input type="text" class="download-file width-full" id="download-reference-lib" readonly></td>
              <td><input type="button" value="Clear" name="4" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Android Code (Example)</span></td>
              <td><input type="text" class="width-full" id="download-ex-android"></td>
              <td></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Android Apk</span></td>
              <td><input type="text" class="download-file width-full" id="download-android-apk" readonly></td>
              <td><input type="button" value="Clear" name="6" class="textbtn"></td>
            </tr>
            <tr class="item-row">
              <td class="table-header" style="text-align:center;"><span>Android GitHub</span></td>
              <td><input type="text" class="width-full" id="download-android-git"></td>
              <td></td>
            </tr>
          </tbody>

        </table>

        <div style="margin:10px 0 10px 0;">
          <input class="button-submit width-20" id="btn-update" type="button" value="등록">
          <div class="clear"></div>
        </div>
      </div>

    </div>

    <div class="popup-box" id="files-popup">
      <span class="standard-lien"></span>
      <div style="width:360px;">
        <p>다운로드 파일을 선택하세요.</p>
        <div id="file-list" style="text-align:left; max-height: 250px; overflow-y:scroll; margin: 10px 0 10px 0;">
        </div>
        <input class="button-submit width-full" id="btn-close" type="button" value="닫기">
        <div class="clear"></div>
      </div>
    </div>

    <input type="hidden" id="content-no">
    <input type="hidden" id="content-name">
    <input type="hidden" id="content-name-kr">

  </div>

  <!--Footer-->
  <% include ./footer %>
  <!--Scripts-->

  <script src="/js/jquery.min.js"></script>
  <script src="/js/jquery.easing.min.js"></script>
  <script src="/js/modernizr.custom.42534.js" type="text/javascript"></script>
  <script src="/js/jquery.waitforimages.js" type="text/javascript"></script>
  <script src="/js/typed.js" type="text/javascript"></script>
  <script src="/js/masonry.pkgd.min.js" type="text/javascript"></script>
  <script src="/js/imagesloaded.pkgd.min.js" type="text/javascript"></script>
  <script src="/js/jquery.jkit.1.2.16.min.js"></script>

  <script src="/js/script.js" type="text/javascript"></script>
  <script src="/js/manager/downloadmanager.js" type="text/javascript"></script>

  <script>
    $('#button, #buttons').on('click', function() {
      $(".opacity-nav").fadeToggle("slow", "linear");
      // Animation complete.
    });

    getDownloadFileList();
    setContents(<%- JSON.stringify(contents) %>);
    setKitSoftware(<%- JSON.stringify(kitsoftware) %>);
    setDownloads(<%- JSON.stringify(downloads) %>);
  </script>

</body>

</html>
